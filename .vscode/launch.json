{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Smoke Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-q",
                "src/aynime_capture/tests/test_smoke.py"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Module Entry",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        }
    ]
}
